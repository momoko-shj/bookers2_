<div class="container px-5 pm-0">
  <div class="row">

<%= render 'books/book',user: @book.user,book: @newbook %>

<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
   <table class="table table-hover table-invers">
     <tbody>
      <tr>
      <th><%= image_tag @book.user.get_profile_image(100,100) %><br>
            <%= link_to @book.user.name,user_path(@book.user) %></td>
       <td><%= link_to @book.title,book_path(@book) %></td>
       <td><%= @book.body %></td>
       <td><% if @book.user==current_user %>
           <%= link_to"Edit",edit_book_path(@book),class:"btn btn-sm btn-success" %></td>
       <td><%= link_to"Destroy",book_path(@book),method: :delete,class:"btn btn-sm btn-danger" %>
           <% end %>
       </td
      </tr>
     </tbody>
     </table>
</div>
</div>
</div>
</div>
  
