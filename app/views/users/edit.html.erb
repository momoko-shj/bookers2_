<head>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.1.2/css/all.css">
</head>


<% if @user.errors.any?%>
  <%=@user.errors.count %>errors prohibited this obj from being saved
<ul>
  <% @user.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
<% end %>
</ul>


<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      
      <h2>User info</h2>
      
      <%= form_with model:@user do |f| %>
      
      <div class="form-group">
        <label for="use_name">Name</label>
        <%= f.text_field:name,autoforcus:true,id:"inputName",placeholder:@user.name %>
      </div>
     
     <div class="form-group">
        <label for="user_image">Image</label>
          <%=f.file_field :profile_image,class:"form-control-file user-image" %>
      </div>
      
      <div class="form-group">
        <label for="user_introduction"></label>
          <p>Introduction</p>
           <%= f.text_area :introduction,class:"form-control-introduction" %>
      </div>
      
      <div class="form-group">
        <%= f.submit"Update User",class: "btn btn-secondary"%>
      </div>
      <% end %>
      
     
     </div>
  </div>
</div>